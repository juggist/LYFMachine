<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_shop_ll_buy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="416dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/fragment_shop_buy_goodsPic"
            android:layout_width="220dp"
            android:layout_height="220dp" />

        <TextView
            android:id="@+id/fragment_shop_buy_goodsName_CN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/shop_info_normal"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/fragment_shop_buy_goodsName_EN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/shop_info_normal"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/fragment_shop_buy_goodsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/shop_info_normal"
            android:textSize="26sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="501dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shop_buy_line" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="322dp"
         >

        <include layout="@layout/fragment_shop_typechoose" />

        <include layout="@layout/fragment_shop_typecurrent" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageButton
            android:id="@+id/fragment_shop_buy_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/buy_back" />
    </FrameLayout>

</LinearLayout>