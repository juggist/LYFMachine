<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/adapter_shop_goodsPic_bg"
        android:layout_width="match_parent"
        android:layout_height="170dp" >

        <ImageView
            android:id="@+id/adapter_shop_goodsPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/adapter_shop_sold_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/shop_sold_finish" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/adapter_shop_goodsName_bg"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center"
        android:orientation="vertical" >

        <!--
             <TextView
            android:id="@+id/adapter_shop_goodsName_CN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/adapter_shop_goodsName_EN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        -->

        <com.icoffice.library.widget.MarqueeText
            android:id="@+id/adapter_shop_goodsName_CN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
             android:singleLine="true"
            android:text="" />

        <com.icoffice.library.widget.MarqueeText
            android:id="@+id/adapter_shop_goodsName_EN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
             android:singleLine="true"
            android:text="" />
        <!--
        <com.icofficeapp.widget.MarqueeText
            android:id="@+id/adapter_shop_goodsName_CN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusableInTouchMode="true"
            android:singleLine="true" >
        </com.icofficeapp.widget.MarqueeText>

        <com.icofficeapp.widget.MarqueeText
            android:id="@+id/adapter_shop_goodsName_EN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusableInTouchMode="true"
            android:singleLine="true" >
        </com.icofficeapp.widget.MarqueeText>
        -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/adapter_shop_goodsPrice_bg"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="@color/shop_price_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/adapter_shop_goodsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null" />
    </LinearLayout>

</LinearLayout>