<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/way_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/library_commit" />
        <Button
            android:layout_marginLeft="30dp"
            android:id="@+id/way_template"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/library_template" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/MainGridViewScrollLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.icoffice.library.util.LibraryGridView
                android:id="@+id/way_gv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="2dp"
                android:numColumns="3"
                android:verticalSpacing="2dp" >
            </com.icoffice.library.util.LibraryGridView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>