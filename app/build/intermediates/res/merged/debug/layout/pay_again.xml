<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pay_again"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shop_success_01" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/pay_success"
        android:textSize="26sp" />

    <Button
        android:id="@+id/pay_again_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/shop_success_btn_bg"
        android:text="@string/pay_again"
        android:textSize="20sp" />

</LinearLayout>